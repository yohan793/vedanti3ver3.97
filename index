<body>
    <h1 class="animated-text">Vedanti, will you go out with me?</h1>
    <button class="btn yes-btn" onclick="showFireworks()">Yes</button>
    <button class="btn no-btn" onclick="askAgain()">No</button>
    <div class="fireworks" id="fireworks"></div>
    
    <!-- Background Music -->
    <audio autoplay loop>
        <source src="your-music-file.mp3" type="audio/mp3">
    </audio>
    
    <script>
        let noClickCount = 0;
        
        function showFireworks() {
            document.getElementById('fireworks').style.display = 'block';
        }
        
        function askAgain() {
            let noButton = document.querySelector('.no-btn');
            if (noClickCount === 0) {
                alert('Are you sure?');
                noClickCount++;
            } else {
                noButton.style.position = 'absolute';
                noButton.style.left = Math.random() * window.innerWidth + 'px';
                noButton.style.top = Math.random() * window.innerHeight + 'px';
            }
        }
    </script>
</body>
